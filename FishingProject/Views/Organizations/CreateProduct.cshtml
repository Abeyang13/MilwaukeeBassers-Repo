@model FishingProject.Models.Product

@{
    ViewBag.Title = "CreateProduct";
}

<u><h2>Create Product</h2></u>
<br />
@using (Html.BeginForm("CreateProduct", "Organizations", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
